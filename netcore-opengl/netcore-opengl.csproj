<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>netcore-opengl</PackageId>
    <PackageVersion>0.2.2</PackageVersion>
    <Title>net core opengl</Title>
    <Description></Description>
    <LangVersion>8</LangVersion>
    <Authors>Lorenzo Delana</Authors>
    <PackageTags>netcore opengl silk.net avalonia</PackageTags>
    <PackageProjectUrl>https://github.com/devel0/netcore-opengl#netcore-opengl</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <noWarn>1591</noWarn>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.10.0-preview3"/>
    <PackageReference Include="Avalonia.Desktop" Version="0.10.0-preview3"/>
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.10.0-preview3"/>
    <!-- <PackageReference Include="netcore-desktop" Version="0.1.2"/ -->
    <ProjectReference Include="..\..\netcore-desktop\netcore-desktop\netcore-desktop.csproj" />
    <!-- <PackageReference Include="netcore-sci" Version="1.12.2"/> -->
    <ProjectReference Include="..\..\netcore-sci\netcore-sci\netcore-sci.csproj" />
    <PackageReference Include="QuantumConcepts.Formats.STL.netcore" Version="1.3.1"/>
    <PackageReference Include="Silk.NET" Version="1.4.0"/>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Controls\"/>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\**"/>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="shaders/*"/>
  </ItemGroup>
</Project>