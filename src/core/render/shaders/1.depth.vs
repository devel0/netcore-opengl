#version 440 core

// 1.depth.vs

//---------------------------------------------------------------
// uniform from the code
//---------------------------------------------------------------

uniform mat4 uObject;
uniform mat4 uModel;

//---------------------------------------------------------------
// vertex buffer components
//---------------------------------------------------------------

// vertex position [object]
layout(location = 0) in vec3 vPos;  

//---------------------------------------------------------------
// BODY
//---------------------------------------------------------------

void main()
{
    gl_Position = uModel * uObject * vec4(vPos, 1.0);        
}